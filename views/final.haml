.cabecera
  -if (!juego)
    %form{:action=>"/",:method=>"post"}
      Introduce tu nombre y entra en nuestro Ranking! 
      %input{:type=>"text",:name=>"juego[nombre]",:placeholder=>"user"}
      %input{:type=>"hidden",:name=>"juego[p_ganadas]",:value=>"0"}
      %input{:type=>"hidden",:name=>"juego[jugadas]",:value=>"0"}
